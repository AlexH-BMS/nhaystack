<project default="test" basedir=".">

  <property environment="env"/>

  <!--========== nuke ==========-->
  <target name="nuke">
    <delete dir="staging"/>    
    <delete dir="jars"/>    
  </target>
  
  <!--========== clean ==========-->
  <target name="clean">
    <delete dir="staging"/>    
  </target>

  <!--========== compile ==========-->
  <target name="compile">  

    <mkdir dir="staging"/>    
    <javac 
      srcdir="src"
      destdir="staging"
      debug="on"
      includeantruntime="false" >
      <compilerarg value="-Xlint:unchecked"/>
      <classpath>
        <pathelement location="${env.NIAGARA_AX}/modules/nhaystack.jar" />
      </classpath>
    </javac>

  </target>

  <!--========== jar ==========-->
  <target name="jar">
    <mkdir dir="jars"/>    
    <jar 
      destfile="jars/nhaystack_test.jar" 
      basedir="staging" />
  </target>

  <!--========== make ==========-->
  <target name="make" depends="clean,compile,jar"/>

  <!--========== test ==========-->
  <target name="test" depends="make">

    <java classname="nhaystack.test.NTest">
      <classpath>
        <pathelement location="${env.NIAGARA_AX}/modules/nhaystack.jar" />
        <pathelement location="jars/nhaystack_test.jar" />
      </classpath>
    </java>

  </target> 

</project>
